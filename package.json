{
  "name": "nmapper",
  "version": "1.0.0",
  "description": "LAN Network Monitor - A comprehensive network monitoring system",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev -w @nmapper/backend\" \"npm run dev -w @nmapper/frontend\"",
    "build": "npm run build --workspaces",
    "start": "npm run start -w @nmapper/backend",
    "test": "npm run test --workspaces",
    "test:coverage": "npm run test:coverage --workspaces",
    "lint": "npm run lint --workspaces",
    "lint:fix": "npm run lint:fix --workspaces",
    "typecheck": "npm run typecheck --workspaces",
    "clean": "npm run clean --workspaces && rm -rf node_modules",
    "install:all": "npm install",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "keywords": ["network", "monitoring", "nmap", "lan", "typescript", "react"],
  "author": "TakashiAihara",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.14.12",
    "concurrently": "^8.2.2",
    "prettier": "^3.3.3",
    "typescript": "^5.5.4"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}