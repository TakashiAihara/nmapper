{
  "name": "@nmapper/backend",
  "version": "1.0.0",
  "description": "Backend service for LAN Network Monitor",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "nmapper": "dist/cli.js"
  },
  "scripts": {
    "dev": "tsx watch src/cli.ts",
    "build": "tsc --build",
    "start": "node dist/cli.js",
    "clean": "rm -rf dist",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@hono/node-server": "^1.12.0",
    "@nmapper/shared": "workspace:*",
    "commander": "^12.1.0",
    "hono": "^4.5.3",
    "pg": "^8.12.0",
    "xml2js": "^0.6.2",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/pg": "^8.11.6",
    "@types/xml2js": "^0.4.14",
    "@typescript-eslint/eslint-plugin": "^7.17.0",
    "@typescript-eslint/parser": "^7.17.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.3",
    "tsx": "^4.16.2"
  }
}